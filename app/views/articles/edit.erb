<form method="post" action="/articles/<%= @article.id %>" >
    <input type="hidden" name="_method" value="patch">
    <!-- <input type="text" name="article[title]"> Article Title: <%= @article.title %></input> -->
    <label for="title">Title</label>
    <input id="title" type="text" name="article[title]" value="<%= @article.title %>" />
    <label for="content">Content</label>
    <input id="content" type="text" name="article[content]" value="<%= @article.content %>" />
    <!-- <input type="text" name="article[content]"> Article Content: <%= @article.content %></input> -->

    <button type="submit" value="submit">Submit</button>

</form>
